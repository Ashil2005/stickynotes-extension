{
    "manifest_version": 3,
    "name": "StickyNotes",
    "version": "1.0",
    "description": "Increase productivity by pinning persistent, customizable sticky notes on any webpage or PDF. Drag, edit, and personalize your research contextually.",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}